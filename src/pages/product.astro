---
import '../styles.css';
---
<html>
  <head><meta charset="utf-8"><title>Product</title></head>
  <body>
    <div class="container">
      <div class="card">
        <h2 id="title">Product</h2>
        <div id="desc" class="small"></div>
        <div style="margin-top:12px"><button id="add" class="btn">Add to cart</button></div>
      </div>
    </div>

    <script>
      const url = new URL(location.href);
      const id = url.searchParams.get('id');
      (async ()=>{
        const r = await fetch('/api/products');
        const j = await r.json();
        const p = (j.products||[]).find(x=>x.id==id);
        if(!p){document.getElementById('title').textContent='Not found'; return;}
        document.getElementById('title').textContent = p.name;
        document.getElementById('desc').textContent = 'Price: ' + (p.price_cents/100).toFixed(2) + ' USD';
        document.getElementById('add').addEventListener('click', ()=>{
          const cart = JSON.parse(localStorage.getItem('cart')||'[]');
          const item = cart.find(x=>x.id==id);
          if(item) item.qty++; else cart.push({id, qty:1});
          localStorage.setItem('cart', JSON.stringify(cart));
          alert('Added');
        });
      })();
    </script>
  </body>
</html>
